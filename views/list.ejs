<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% let i %> <% for (i in newItem){ %>
      <div class="item">
        <input type="checkbox" />
        <p><%= newItem[i] %></p>
      </div>
      <% } %>

      <form class="item" action="/" method="POST">
        <input type="text" name="item" placeholder="New item" autocomplete="off"/>
        <button type="submit" name="list" value=<%= listTitle %> >+</button>
      </form>
    </div>

<%- include("footer") -%>